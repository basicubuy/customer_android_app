<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/wizard_card_lyt"
        android:layout_width="310dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">


        <ImageView
            android:id="@+id/welcom_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/wizard_1"/>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/wizard_card_lyt"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        >

    <TextView
        android:id="@+id/wizard_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Get stuff Done"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorMaterialDark"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/wizard_subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/wizard_head"
        android:text="Connect with local professionals easily"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorMaterialDark"
        android:textSize="18sp"
        />
    </LinearLayout>

</RelativeLayout>