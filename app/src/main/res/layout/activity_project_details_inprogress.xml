<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:id="@+id/main_lyt"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginBottom="20dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="15dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="bottom"
                app:layout_collapseMode="pin"
                android:background="@android:color/white"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/Toolbar.Light"  />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Task Info"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/textColorDark"
                android:textAlignment="center"
                android:textSize="14sp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/toggle_nav_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:src="@drawable/ic_more_vertical"
                android:layout_marginEnd="31dp"
                app:tint="@color/textColorDark"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingStart="20dp"
      android:paddingEnd="20dp">

      <TextView
          android:id="@+id/project_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:textColor="@color/colorPrimary"
          android:textAlignment="center"
          android:textSize="20sp"
          android:text="Project Name"
          />

      <TextView
          android:id="@+id/project_brief"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:textColor="@color/textColorDark"
          android:textSize="14sp"
          android:text="@string/lorem_ipsum2"
          />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:textColor="@color/textColor"
               android:textSize="18sp"
               android:text="Budget:"
               />
           <TextView
               android:id="@+id/project_amount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:layout_marginStart="5dp"
               android:fontFamily="@font/poppins_medium"
               android:textColor="@color/textColorDark_alt"
               android:textSize="18sp"
               android:text="N40,000"
               />
       </LinearLayout>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardCornerRadius="10dp"
          app:cardElevation="1dp"
          android:layout_margin="1dp"

          >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="20dp">

             <RelativeLayout
                 android:layout_width="60dp"
                 android:layout_height="60dp">

                 <com.mikhaellopez.circularimageview.CircularImageView
                     android:id="@+id/pro_image_cir"
                     android:layout_width="60dp"
                     android:layout_height="60dp"
                     app:civ_border="false"
                     app:srcCompat="@drawable/fake_user_image"/>

                 <ImageView
                     android:layout_width="10dp"
                     android:layout_height="10dp"
                     android:src="@drawable/shape_circle"
                     android:layout_alignBottom="@id/pro_image_cir"
                     android:layout_alignParentRight="true"
                     app:tint="@color/colorPrimary"/>
             </RelativeLayout>


              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="20dp"
                  android:orientation="vertical">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Username"
                      android:textColor="@color/colorPrimary"
                      android:textSize="12sp"
                      android:fontFamily="@font/poppins_semibold"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="UI/UX Specialist"
                      android:textColor="@color/textColorDark"
                      android:textSize="10sp"
                      android:fontFamily="@font/poppins_semibold"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Last seen: 12hrs ago"
                      android:textColor="@color/fontColorLight"
                      android:textSize="8sp"
                      />
              </LinearLayout>


          </LinearLayout>
      </androidx.cardview.widget.CardView>


      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardCornerRadius="10dp"
          android:background="@color/colorMaterialWhite"
          android:layout_marginLeft="1dp"
          android:layout_marginRight="1dp"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="1dp"
          app:cardElevation="1dp"
          >

          <LinearLayout
              android:id="@+id/safety_toolkit_lyt"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingStart="28dp"
              android:paddingEnd="28dp"
              android:paddingTop="16dp"
              android:paddingBottom="16dp"
              >

              <com.github.florent37.shapeofview.shapes.CircleView
                  android:layout_width="44dp"
                  android:layout_height="44dp">

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@drawable/notify_warning_bg"
                      android:padding="10dp"
                      >

                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_centerInParent="true"
                          android:src="@drawable/ic_shield"/>

                  </RelativeLayout>
              </com.github.florent37.shapeofview.shapes.CircleView>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center_vertical"
                  android:layout_marginStart="10dp">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Safety Toolkit"
                      android:textSize="14sp"
                      android:fontFamily="@font/poppins_semibold"
                      android:textColor="@color/textColorDark_alt"/>

              </LinearLayout>

              <ImageView
                  android:layout_width="24dp"
                  android:layout_height="24dp"
                  android:src="@drawable/ic_arrow_forward_black_24dp"
                  app:tint="@color/textColor"
                  android:layout_marginEnd="20dp"/>

          </LinearLayout>

      </androidx.cardview.widget.CardView>


      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardCornerRadius="10dp"
          android:background="@color/colorMaterialWhite"
          android:layout_marginLeft="1dp"
          android:layout_marginRight="1dp"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="1dp"
          app:cardElevation="1dp"
          >

          <LinearLayout
              android:id="@+id/dispute_lyt"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingStart="28dp"
              android:paddingEnd="28dp"
              android:paddingTop="16dp"
              android:paddingBottom="16dp"
              >

              <com.github.florent37.shapeofview.shapes.CircleView
                  android:layout_width="44dp"
                  android:layout_height="44dp">

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@drawable/notify_info_bg"
                      android:padding="10dp"
                      >

                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_centerInParent="true"
                          android:src="@drawable/ic_file_text"/>

                  </RelativeLayout>
              </com.github.florent37.shapeofview.shapes.CircleView>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center_vertical"
                  android:layout_marginStart="10dp">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Dispute Resolution"
                      android:textSize="14sp"
                      android:fontFamily="@font/poppins_semibold"
                      android:textColor="@color/textColorDark_alt"/>

              </LinearLayout>

              <ImageView
                  android:layout_width="24dp"
                  android:layout_height="24dp"
                  android:src="@drawable/ic_arrow_forward_black_24dp"
                  app:tint="@color/textColor"
                  android:layout_marginEnd="20dp"
                  />

          </LinearLayout>

      </androidx.cardview.widget.CardView>


      <RelativeLayout
          android:id="@+id/overlay_loader"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="visible"
          android:background="@color/overlay_light_60">


          <ProgressBar
              android:id="@+id/lyt_progress"
              style="@style/Widget.AppCompat.ProgressBar"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:indeterminate="true" />

          <TextView
              android:id="@+id/loading_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Loading Bids..."
              android:fontFamily="@font/montserrat"
              android:layout_below="@id/lyt_progress"
              android:textAlignment="center"
              android:padding="15dp"
              android:textColor="@color/colorMaterialDark"
              android:textSize="16sp"/>


      </RelativeLayout>


  </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/top_nav_menu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_bottomRightRadius="10dp"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp"
        android:layout_gravity="end|center_horizontal"
        android:visibility="gone"
        android:layout_marginEnd="16dp"
        android:elevation="1dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMaterialWhite"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/menu_edit_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_info_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_add_white_24dp"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_delete_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_danger_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_trash_2"
                            app:tint="@color/danger_notify"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_timeline_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_warning_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_add_white_24dp"
                            app:tint="@color/warning_notify"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timeline"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_share_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_success_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_share_2"
                            app:tint="@color/success_notify"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_support_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_info_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_help_circle"
                            app:tint="@color/info_notify"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Support"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
        </LinearLayout>

    </com.github.florent37.shapeofview.shapes.RoundRectView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
