<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_lyt">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginBottom="20dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="15dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="bottom"
                app:layout_collapseMode="pin"
                android:background="@android:color/white"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/Toolbar.Light"  />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Dispute Details"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/textColorDark"
                android:textAlignment="center"
                android:textSize="14sp"
                android:gravity="center"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dispute ID: "
                    android:textSize="14sp"
                    android:textColor="@color/textColor"
                    />

                <TextView
                    android:id="@+id/task_ref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    android:textSize="14sp"
                    android:textColor="@color/textColor"
                    />

                <TextView
                    android:id="@+id/dispute_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="14sp"
                    android:textColor="@color/warning_notify"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task: "
                    android:textSize="14sp"
                    android:textColor="@color/textColor"
                    />

                <TextView
                    android:id="@+id/dispute_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details "
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/textColor"
                />

            <TextView
                android:id="@+id/details_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum2"
                android:textSize="14sp"
                android:textColor="@color/textColor_alt"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Concerned Pro: "
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/textColor"
                />

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shape_roundRect_topLeftRadius="10dp"
                app:shape_roundRect_bottomLeftRadius="10dp"
                app:shape_roundRect_topRightRadius="10dp"
                app:shape_roundRect_bottomRightRadius="10dp"
                android:visibility="visible"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorMaterialWhite"
                    android:padding="20dp">


                    <com.github.florent37.shapeofview.shapes.RoundRectView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:shape_roundRect_topLeftRadius="10dp"
                        app:shape_roundRect_bottomLeftRadius="10dp"
                        app:shape_roundRect_topRightRadius="10dp"
                        app:shape_roundRect_bottomRightRadius="10dp"
                        android:visibility="visible"
                        >
                        <ImageView
                            android:id="@+id/pro_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/fake_user_image"
                            android:scaleType="centerCrop"/>

                    </com.github.florent37.shapeofview.shapes.RoundRectView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp">


                        <TextView
                            android:id="@+id/pro_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="James mark williams"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"
                            android:maxWidth="102dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/textColorDark_alt" />

                        <TextView
                            android:id="@+id/pro_skill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Web Developer"
                            android:textSize="10sp"
                            android:maxWidth="77dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/textColorDark" />

                        <TextView
                            android:id="@+id/total_jobs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75 jobs completed"
                            android:textSize="10sp"
                            android:maxWidth="93dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/textColorDark_alt" />



                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_arrow_forward_black_24dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.github.florent37.shapeofview.shapes.RoundRectView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Comments "
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/textColor"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/spacing_medium"
                android:paddingTop="@dimen/spacing_medium"
                android:scrollbars="vertical"
                android:scrollingCache="true" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="20dp"
        android:orientation="vertical">

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="match_parent"
            android:layout_height="114dp"
            app:shape_roundRect_bottomLeftRadius="10dp"
            app:shape_roundRect_topRightRadius="10dp"
            app:shape_roundRect_topLeftRadius="10dp"
            app:shape_roundRect_bottomRightRadius="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/input_field">

                <EditText
                    android:id="@+id/editText_msg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    />
            </LinearLayout>

        </com.github.florent37.shapeofview.shapes.RoundRectView>

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/submit_disput_sh"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            app:shape_roundRect_bottomLeftRadius="8dp"
            app:shape_roundRect_topLeftRadius="8dp"
            app:shape_roundRect_topRightRadius="8dp"
            app:shape_roundRect_bottomRightRadius="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/info_notify">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorMaterialWhite"
                    />

                <com.wang.avi.AVLoadingIndicatorView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>


        </com.github.florent37.shapeofview.shapes.RoundRectView>

    </LinearLayout>
    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/top_nav_menu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_bottomRightRadius="10dp"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp"
        android:layout_gravity="end|center_horizontal"
        android:visibility="gone"
        android:layout_marginEnd="16dp"
        android:elevation="1dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMaterialWhite"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/menu_edit_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_info_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_add_white_24dp"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_delete_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_danger_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_trash_2"
                            app:tint="@color/danger_notify"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_timeline_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_warning_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_add_white_24dp"
                            app:tint="@color/warning_notify"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timeline"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_share_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_success_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_share_2"
                            app:tint="@color/success_notify"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_support_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_info_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_help_circle"
                            app:tint="@color/info_notify"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Support"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
        </LinearLayout>

    </com.github.florent37.shapeofview.shapes.RoundRectView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
