<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/rootLayout"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="3dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/colorMaterialWhite"
    app:cardElevation="3dp"
    android:layout_height="wrap_content">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginStart="5dp"
           android:layout_marginBottom="2dp"
           android:orientation="horizontal">

           <com.mikhaellopez.circularimageview.CircularImageView
               android:id="@+id/review_image"
               android:layout_width="80dp"
               android:layout_height="80dp"
               app:civ_background_color="@color/receiving_color"
               app:civ_border="false"
               android:src="@drawable/loading_placeholder"/>


           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:layout_marginStart="12dp"
               >

               <TextView
                   android:id="@+id/review_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Mary John"
                   android:fontFamily="@font/poppins_semibold"
                   android:textSize="20sp"
                   android:textColor="@color/colorMaterialDark"/>

               <TextView
                   android:id="@+id/task_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Web Design Task"
                   android:layout_below="@id/review_name"
                   android:fontFamily="@font/poppins"
                   android:textColor="@color/fontColor"
                   />

           </RelativeLayout>

           <View
               android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"/>

           <TextView
               android:id="@+id/rating_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="1 Week ago"
               android:fontFamily="@font/poppins"
               android:textSize="10sp"
               android:layout_marginEnd="10dp"
               android:textColor="@color/colorMaterialDark"/>

       </LinearLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/overlay_dark_20"/>

       <RatingBar
           android:id="@+id/rating"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:progressBackgroundTint="@color/duskYellow"
           android:layout_marginStart="10dp"

           />

       <TextView
           android:id="@+id/review_msg"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/lorem_ipsum2"
           android:layout_marginStart="10dp"
           android:layout_below="@id/service_name"
           android:fontFamily="@font/poppins"
           android:textColor="@color/fontColor"
           />

   </LinearLayout>



</androidx.cardview.widget.CardView>