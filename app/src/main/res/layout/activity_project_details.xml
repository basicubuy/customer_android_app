<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main_lyt"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginBottom="20dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="15dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="bottom"
                app:layout_collapseMode="pin"
                android:background="@android:color/white"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/Toolbar.Light"  />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Task Info"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/textColorDark"
                android:textAlignment="center"
                android:textSize="14sp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/toggle_nav_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:src="@drawable/ic_more_vertical"
                android:layout_marginEnd="31dp"
                app:tint="@color/textColorDark"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingStart="20dp"
      android:paddingEnd="20dp">

      <TextView
          android:id="@+id/project_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:textColor="@color/colorPrimary"
          android:textAlignment="center"
          android:textSize="20sp"
          android:text="Project Name" />

      <TextView
          android:id="@+id/project_brief"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:textColor="@color/textColorDark"
          android:textSize="14sp"
          android:text="@string/lorem_ipsum2"
          />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:textColor="@color/textColor"
               android:id="@+id/amt_text"
               android:textSize="18sp"
               android:text="Budget:"
               />
           <TextView
               android:id="@+id/project_amount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:layout_marginStart="5dp"
               android:fontFamily="@font/poppins_medium"
               android:textColor="@color/textColorDark_alt"
               android:textSize="18sp"
               android:text="N40,000"
               />
       </LinearLayout>


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:textColor="@color/textColorDark"
           android:textSize="18sp"
           android:fontFamily="@font/poppins_medium"
           android:text="@string/skills_experties"
           />

      <com.google.android.material.chip.ChipGroup
          android:id="@+id/skills_chip_grp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:chipSpacing="5dp"
          android:layout_marginTop="20dp"
          app:singleSelection="true"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Bids"
           android:fontFamily="@font/poppins_medium"
           android:textSize="18sp"
           android:layout_marginTop="20dp"
           android:textColor="@color/textColorDark"
           />
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/bids_rv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           />

   </LinearLayout>
      <RelativeLayout
          android:id="@+id/overlay_loader"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="visible"
          android:background="@color/overlay_light_60">


          <ProgressBar
              android:id="@+id/lyt_progress"
              style="@style/Widget.AppCompat.ProgressBar"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:indeterminate="true" />

          <TextView
              android:id="@+id/loading_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Loading Bids..."
              android:fontFamily="@font/montserrat"
              android:layout_below="@id/lyt_progress"
              android:textAlignment="center"
              android:padding="15dp"
              android:textColor="@color/colorMaterialDark"
              android:textSize="16sp"/>


      </RelativeLayout>



      <!--      <RelativeLayout-->
<!--          android:id="@+id/no_bids"-->
<!--          android:layout_width="match_parent"-->
<!--          android:layout_height="match_parent"-->
<!--          android:layout_gravity="center_horizontal"-->
<!--          android:layout_marginTop="20dp">-->

<!--          <ImageView-->
<!--              android:id="@+id/no_bids_img"-->
<!--              android:layout_width="wrap_content"-->
<!--              android:layout_height="300dp"-->
<!--              android:layout_centerInParent="true"-->
<!--              android:src="@drawable/no_bids" />-->

<!--          <TextView-->
<!--              android:layout_width="wrap_content"-->
<!--              android:layout_height="wrap_content"-->
<!--              android:layout_below="@id/no_bids_img"-->
<!--              android:fontFamily="@font/montserrat_bold"-->
<!--              android:textSize="18dp"-->
<!--              android:textColor="@color/colorMaterialDark"-->
<!--              android:textAlignment="center"-->
<!--              android:text="We've notified top ubuy.ng pros regarding your task"/>-->
<!--      </RelativeLayout> -->

  </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/top_nav_menu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_bottomRightRadius="10dp"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp"
        android:layout_gravity="end|center_horizontal"
        android:visibility="gone"
        android:layout_marginEnd="16dp"
        android:elevation="1dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMaterialWhite"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/menu_edit_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_info_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_add_white_24dp"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_delete_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_danger_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_trash_2"
                            app:tint="@color/danger_notify"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_timeline_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_warning_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_add_white_24dp"
                            app:tint="@color/warning_notify"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timeline"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_share_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_success_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_share_2"
                            app:tint="@color/success_notify"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_support_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notify_info_bg">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_help_circle"
                            app:tint="@color/info_notify"
                            android:padding="4dp"/>


                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Support"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColorDark"/>
            </LinearLayout>
        </LinearLayout>

    </com.github.florent37.shapeofview.shapes.RoundRectView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
