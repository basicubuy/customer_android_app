<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/rootLayout"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <com.github.florent37.shapeofview.shapes.RoundRectView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:shape_roundRect_bottomLeftRadius="20dp"
      app:shape_roundRect_topRightRadius="20dp"
      app:shape_roundRect_topLeftRadius="20dp"
      android:elevation="1dp"
      android:layout_margin="20dp"
      app:shape_roundRect_bottomRightRadius="20dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:background="@color/colorMaterialWhite"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          android:paddingBottom="10dp"
          android:paddingTop="10dp">

          <TextView
              android:id="@+id/feed_title"
              android:layout_width="288dp"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:fontFamily="@font/poppins_medium"
              android:text="Logo Design and animation created with a test for art"
              android:textAlignment="textStart"
              android:textColor="@color/colorMaterialDark"
              android:textSize="16sp" />

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginVertical="10dp"
              android:background="@color/grey_20"/>

          <com.github.florent37.shapeofview.shapes.RoundRectView
              android:layout_width="wrap_content"
              android:layout_height="200dp"
              app:shape_roundRect_bottomLeftRadius="10dp"
              app:shape_roundRect_topRightRadius="10dp"
              app:shape_roundRect_topLeftRadius="10dp"
              app:shape_roundRect_bottomRightRadius="10dp"
              >

              <ImageView
                  android:id="@+id/feed_image"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:src="@drawable/pro_cover_photo"
                  android:scaleType="centerCrop"/>

          </com.github.florent37.shapeofview.shapes.RoundRectView>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="13dp">

             <TextView
                 android:id="@+id/feed_like"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"
                 android:textColor="@color/fontColorLight"
                 android:fontFamily="@font/poppins_medium"
                 android:textSize="12sp"
                 android:drawablePadding="5dp"
                 android:drawableTint="@color/red"
                 android:drawableStart="@drawable/ic_baseline_favorite_24"/>

             <TextView
                 android:id="@+id/feed_comment"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"
                 android:textColor="@color/fontColorLight"
                 android:fontFamily="@font/poppins_medium"
                 android:textSize="12sp"
                 android:drawablePadding="5dp"
                 android:layout_marginStart="23dp"
                 android:drawableTint="@color/colorPrimary"
                 android:drawableStart="@drawable/ic_baseline_mark_chat_unread_24"/>


          </LinearLayout>
      </LinearLayout>


  </com.github.florent37.shapeofview.shapes.RoundRectView>


</LinearLayout>