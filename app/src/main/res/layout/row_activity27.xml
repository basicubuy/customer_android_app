<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?attr/selectableItemBackground">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/my_chat_sh"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:shape_roundRect_bottomRightRadius="10dp"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp"
        app:shape_roundRect_bottomLeftRadius="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/my_chat_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum2"
                android:textColor="@color/colorMaterialWhite"
                android:textSize="14sp"
                />
        </LinearLayout>

    </com.github.florent37.shapeofview.shapes.RoundRectView>
    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/pro_chat_sh"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:shape_roundRect_bottomRightRadius="10dp"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp"
        app:shape_roundRect_bottomLeftRadius="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:layout_marginEnd="30dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/input_field">
            <TextView
                android:id="@+id/pro_chat_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_card"
                android:textColor="@color/textColorDark_alt"
                android:textSize="14sp"
                />
        </LinearLayout>

    </com.github.florent37.shapeofview.shapes.RoundRectView>
</LinearLayout>