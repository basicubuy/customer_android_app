<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">

        <layer-list>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:radius="10dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
                    <solid android:color="@color/colorPrimaryDark" />
                    <size android:width="75dp" android:height="55dp" />
                </shape>
            </item>
        </layer-list>

    </item>

    <item>
        <layer-list>
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:radius="10dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
<!--                    <stroke android:width="2dp" android:color="@color/colorPrimaryDark" />-->
                    <solid android:color="@color/colorPrimaryDark"/>
                    <size android:width="75dp" android:height="55dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>